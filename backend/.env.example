# ==============================
# Kafka Configuration
# ==============================

# --- Local Kafka (default) ---
# KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# --- Remote Kafka ---
# KAFKA_BOOTSTRAP_SERVERS=<broker>:9093
# KAFKA_SECURITY_PROTOCOL=SASL_PLAINTEXT
# KAFKA_SASL_MECHANISM=PLAIN
# KAFKA_SASL_USERNAME=
# KAFKA_SASL_PASSWORD=

# Optional: set if your environment requires a specific CA bundle path.
# KAFKA_SSL_CAFILE=

# Topics (same defaults as today)
PG_TOPIC=pg-transactions
CBS_TOPIC=cbs-transactions
MOBILE_TOPIC=mobile-transactions

# Consumer group
KAFKA_GROUP_ID=banking_reconciler_v3
